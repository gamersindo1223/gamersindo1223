    <script>
        // Add interactivity
        document.addEventListener('DOMContentLoaded', function() {
            // Make ride options clickable
            const rideOptions = document.querySelectorAll('.ride-option');
            rideOptions.forEach(option => {
                option.addEventListener('click', function() {
                    // Remove highlight from all options
                    rideOptions.forEach(opt => opt.classList.remove('highlighted'));
                    // Add highlight to clicked option
                    this.classList.add('highlighted');
                    
                    // Update book button text
                    const rideName = this.querySelector('.ride-name').textContent.split(' ')[0] + ' ' + 
                                   this.querySelector('.ride-name').textContent.split(' ')[1];
                    document.querySelector('.book-button').textContent = `Book ${rideName}`;
                });
            });
            
            // Make payment options clickable
            const paymentOptions = document.querySelectorAll('.payment-option');
            paymentOptions.forEach(option => {
                option.addEventListener('click', function() {
                    paymentOptions.forEach(opt => opt.classList.remove('active'));
                    this.classList.add('active');
                });
            });
            
            // Book button click handler
            document.querySelector('.book-button').addEventListener('click', function() {
                alert('Booking confirmed! Your driver will arrive shortly.');
            });
        });
    </script>
